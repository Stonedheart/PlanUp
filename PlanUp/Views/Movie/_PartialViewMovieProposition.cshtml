@model IEnumerable<PlanUp.Models.Movie>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                \
                <p><img src="@item.ImagePath" /></p>
                <p>@Html.DisplayFor(modelItem => item.Title)</p>
                <p>
                    <span>@Html.DisplayFor(modelItem => item.Director)</span>
                </p>
                <p>
                    <span>@Html.DisplayFor(modelItem => item.Genre)</span>
                </p>
                <p>
                    <span>@Html.DisplayFor(modelItem => item.Year)</span>
                </p>
                <p>
                    <span>@Html.DisplayFor(modelItem => item.Duration)</span>
                </p>
                <button type="button" class="btn-primary">Choose</button>    
            </div>            
        }
</div>
