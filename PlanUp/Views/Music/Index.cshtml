@model PlanUp.Models.Song[]

@{
    ViewBag.Title = "Music";
}

@if (Model != null)
{
    <div class="container" style="margin-top: 100px;">
        @foreach (var item in Model)
        {
        <div class="col-md-4">
            <iframe width="380" height="315" src="@item.Etag"></iframe>
        </div>
        }
    </div>
}
<input type="button" value="Get Next Propositions"
       onclick="GeneratePropositionInput()" />
<div id="genrePreferenceForm" style="margin-top: 2px;">
    <a href="/Music/Index" class="btn btn-success btn-sm">Surprise me</a>
    <input type="button" class="btn btn-info btn-sm" value="I know what i want"
           onclick="GenerateFormProposition()" />
    <form action="/Music/Index" id="genreForm" style="display: inline;">
        <input type="text" name="genre" />
        <input type="Submit" value="Next" />
    </form>
</div>
<script>
    document.getElementById("genrePreferenceForm").style.display = "none";
    document.getElementById("genreForm").style.display = "none";
    function GeneratePropositionInput()
    {
        document.getElementById("genrePreferenceForm").style.display = "block";
    }
    function GenerateFormProposition()
    {
        document.getElementById("genreForm").style.display = "block";
    }
</script>

<h2>Music</h2>