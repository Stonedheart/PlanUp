@model PlanUp.Models.Song[]
@{
    ViewBag.Title = "Listen to Music";
}
<script src="/Scripts/JSForMusicView.js" type="text/javascript"></script>
<script src="/Scripts/jquery-3.1.1.js"></script>

@if (Model != null)
{
    <div class="container" style="margin-top: 100px;">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <iframe width="380" height="315" src="@Html.ValueFor(i => item.Etag)"></iframe>
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#descriptionModal">
                    Description
                </button>
                <div id="descriptionModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">@Html.ValueFor(i => item.Title);</h4>
                            </div>
                            <div class="modal-body">
                                <p>@Html.ValueFor(i => item.Description);</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
<input type="button" class="Next" value="Get Next Propositions"
       onclick="GeneratePropositionInput()" />

<div id="genrePreferenceForm" style="margin-top: 2px;">
    <a href="/Music/Index" class="btn btn-success btn-sm">Surprise me</a>
    <input type="button" class="btn btn-info btn-sm" value="I know what i want"
           onclick="GenerateFormProposition()" />
    <form action="/Music/Index" id="genreForm">
        <input type="text" name="genre" />
        <input type="Submit" value="Next" />
    </form>
</div>